{
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ run lint",
      "npm --prefix ./functions/ run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/cheque/order-cheque",
        "function": "orderCheque"
      },
      {
        "source": "/api/cheque/order-lightning-invoice",
        "function": "orderLightningInvoice"
      },
      {
        "source": "/api/cheque/order-cash",
        "function": "orderCash"
      },
      {
        "source": "/api/change-plan",
        "function": "changePlan"
      },
      {
        "source": "/api/faucet",
        "function": "faucet"
      },
      {
        "source": "/api/rate",
        "function": "rate"
      },
      {
        "source": "/api/integration/refresh-access-token",
        "function": "refreshAccessToken"
      },
      {
        "source": "/api/integration/sign",
        "function": "sign"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  }
}
