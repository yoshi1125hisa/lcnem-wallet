{
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ run lint",
      "npm --prefix ./functions/ run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/deposit/request",
        "function": "deposit"
      },
      {
        "source": "/api/deposit/by-lightning-btc",
        "function": "depositByLightningBtc"
      },
      {
        "source": "/api/withdraw/request",
        "function": "withdraw"
      },
      {
        "source": "/api/change-plan",
        "function": "changePlan"
      },
      {
        "source": "/api/faucet",
        "function": "faucet"
      },
      {
        "source": "/api/rate",
        "function": "rate"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  }
}
