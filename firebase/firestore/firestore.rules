service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user} {
      allow read, update: if request.auth.uid == user;
      allow create: if request.auth.uid != null;

      match /contacts/{contact} {
        allow read, write: if request.auth.uid == user;
      }

      match /wallets/{wallet} {
        allow read, write: if request.auth.uid == user;

        match /integrations/{integration} {
          allow read, write: if request.auth.uid == user;
        }
      }

      match /applications/{application} {
        allow read;
        allow create, delete: if request.auth.uid == user;
      }

      match /custodies/bitcoin/transactions/{transaction} {
        allow read: if request.auth.uid == user;
      }
    }

    match /rates/rate {
      allow read;
    }
  }
}